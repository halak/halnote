{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "ES2019",
    "outDir": "out",
    "lib": [
        "ES2019",
        "DOM",
        "DOM.Iterable"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
